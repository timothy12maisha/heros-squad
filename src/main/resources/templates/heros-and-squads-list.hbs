{{#partial "content"}}
    {{#if heros}}

        {{#each heros}}
            <p> This is are the heros in the Squad: {{ heroName }}</p>
            <p> This is are the heros in the Squad: {{ heroSuperPower }}</p>
            <p> This is are the heros in the Squad: {{ codeName }}</p>
        {{/each}}

    {{/if}}



    <h5>Hero status:</h5>
    <p>
        {{#if heros}}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  HERO IS REGISTERED
        {{/if}}
        <a href="/heros/{{hero.id}}/update">EDIT THIS HERO</a><br>
        <a href="/heros/{{hero.id}}/delete">DELETE THIS HERO</a>
    </p>
    <h5> Squad Status</h5>
    <p>
        {{#if hero}}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  SQUAD IS REGISTERED
        {{/if}}
        <a href="/squads/{{squad.id}}/update">EDIT THIS SQUAD</a><br>
        <a href="/squads/{{squad.id}}/delete">DELETE THIS SQUAD</a>

    </p>
{{/partial}}
{{> layout.hbs}}